<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp">

    <LinearLayout android:id="@+id/txt_refresh_info"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_centerInParent="true"
                  android:gravity="center"
                  android:orientation="vertical">

        <TextView
                android:id="@+id/txt_refresh_indicator"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

        <TextView
                android:id="@+id/txt_update_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
               />
    </LinearLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
            xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_wheel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/txt_refresh_info"
            wheel:matProg_progressIndeterminate="false"
            wheel:matProg_barColor="#69b3e0"
            wheel:matProg_barWidth="2dp"
            wheel:matProg_rimColor="#69b3e0"
            wheel:matProg_rimWidth="2dp"/>

</RelativeLayout>